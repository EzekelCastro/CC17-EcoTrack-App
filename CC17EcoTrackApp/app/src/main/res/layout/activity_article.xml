<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/educationalArticleCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="158dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:backgroundTint="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Rectangle 66 -->
            <View
                android:layout_width="289dp"
                android:layout_height="204dp"
                android:background="@android:color/white"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Text (Lorem ipsum...) -->
            <TextView
                android:id="@+id/loremText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="373dp"
                android:text="@string/lorem_ipsum_text"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:lineSpacingExtra="2sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Image (Rectangle 55) -->
    <ImageView
        android:id="@+id/rectangle55Image"
        android:layout_width="316dp"
        android:layout_height="69dp"
        android:src="@drawable/image1_52321"
        android:layout_marginTop="866dp"
        android:layout_marginStart="29dp"
        android:contentDescription="Rectangle 55 Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- ... (Other elements similarly placed within the root ConstraintLayout) ... -->

</androidx.constraintlayout.widget.ConstraintLayout>
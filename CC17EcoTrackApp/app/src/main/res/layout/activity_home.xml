<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodiaMainView">

    <!-- Background Box with rounded corners -->
    <androidx.cardview.widget.CardView
        android:id="@+id/background_box"
        android:layout_width="375dp"
        android:layout_height="812dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="40dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Image with fit scaling -->
        <ImageView
            android:id="@+id/image1"
            android:layout_width="316dp"
            android:layout_height="69dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="695dp"
            android:src="@drawable/image1_52032" />

        <!-- Log an Activity text -->
        <TextView
            android:id="@+id/log_activity_text"
            android:layout_width="249dp"
            android:layout_height="30dp"
            android:text="Log an Activity"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="101dp"
            android:layout_marginTop="715dp"
            android:textAlignment="viewStart"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Line below header -->
        <View
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:layout_marginTop="935dp"
            android:layout_marginStart="3dp"
            android:background="#808080" />

        <!-- Rectangle boxes with borders -->
        <androidx.cardview.widget.CardView
            android:layout_width="326dp"
            android:layout_height="133dp"
            android:layout_marginTop="406dp"
            android:layout_marginStart="24dp"
            app:cardBackgroundColor="#D9D9D9"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            android:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Educational Tips Text -->
        <TextView
            android:id="@+id/educational_tips_text"
            android:layout_width="192dp"
            android:layout_height="24dp"
            android:text="Educational Tips"
            android:textSize="22sp"
            android:textColor="#8F8E8E"
            android:layout_marginStart="28dp"
            android:layout_marginTop="380dp"
            android:textAlignment="viewStart"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Box for Activities -->
        <androidx.cardview.widget.CardView
            android:layout_width="326dp"
            android:layout_height="133dp"
            android:layout_marginTop="155dp"
            android:layout_marginStart="22dp"
            app:cardBackgroundColor="#D9D9D9"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp" />

        <!-- Text Activities -->
        <TextView
            android:id="@+id/activities_text"
            android:layout_width="154dp"
            android:layout_height="24dp"
            android:text="Activities"
            android:textSize="20sp"
            android:textColor="#0C7B66"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp" />

        <!-- Activity Information Texts -->
        <TextView
            android:id="@+id/activity_info_text1"
            android:layout_width="274dp"
            android:layout_height="24dp"
            android:text="Activity information"
            android:textSize="20sp"
            android:textColor="#8F8E8E"
            android:layout_marginTop="4dp"
            android:layout_marginStart="44dp" />

        <TextView
            android:id="@+id/activity_info_text2"
            android:layout_width="274dp"
            android:layout_height="24dp"
            android:text="Activity information"
            android:textSize="20sp"
            android:textColor="#8F8E8E"
            android:layout_marginTop="36dp"
            android:layout_marginStart="44dp" />

        <!-- EcoTrack Text -->
        <TextView
            android:id="@+id/ecotrack_text"
            android:layout_width="209dp"
            android:layout_height="24dp"
            android:text="EcoTrack"
            android:textSize="35sp"
            android:textColor="#0C7B66"
            android:layout_marginTop="101dp"
            android:layout_marginStart="110dp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
